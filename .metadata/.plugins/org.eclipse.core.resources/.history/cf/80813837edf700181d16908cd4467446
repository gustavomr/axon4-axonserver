server:
  port: 8081

spring:
  datasource:
    url: jdbc:postgresql://localhost:5432/bank-account-db
    username: postgres
    password: mysecretpassword
  jpa:
    database-platform: org.hibernate.dialect.PostgreSQL9Dialect
    show-sql: true
    generate-ddl: true
    hibernate:
      ddl-auto: create-drop

axon:
  amqp:
    exchange: bank-account.events